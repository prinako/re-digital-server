<%- include('./partials/header'); -%>

    
<link rel="stylesheet" href="css/sell.css" />
<section class="container-sell">
    <% try { %>

        <% if (inform !== '') { %>
        <div class="infor"><p><%= inform %></p> </div>
        <% } %>
        <% }catch (e) {} %>
  <div class="title">
    <h1>Novo Cardápio</h1>
  </div>
  <form
    class="form-wrapper"
    action="/admin"
    method="post"
  >
    <div class="wt-h mg-b product">
      <label class="form-label" for="data"><span>Data:</span></label>
      <input
        class="form-control wt-h"
        id="data"
        name="data"
        type="date"
        required
        autocomplete="off"
      />
    </div>
    <div class="mg-b">
      <div class="wt-h product">
        <label class="form-label" for="amoço">Refeição:</label>
        <select class="form-select" name="refeicao1" id="amoço" required>
          <option value="amoço">Amoço</option>
          <option value="janta">Jantar</option>
        </select>
      </div>
    </div>
    <div class="wt-h mg-b product">
      <label class="form-label" for="title"
        ><span>Prato:</span></label
      >
      <input
        class="form-control wt-h"
        id="title"
        name="nomeDaRefeiAmo"
        type="text"
        required
        autocomplete="off"
      />
    </div>
    <h2 class="mg-t">Guarnição:</h2>
    <div class="wt-h mg-b product">
      <input
        class="form-control wt-h"
        id="amo"
        name="amo1"
        type="text"
        placeholder="ex: arroz"
        required
        autocomplete="off"
      />
    </div>
    <div class="wt-h mg-b product">
      <input
        class="form-control wt-h"
        id="amo"
        name="amo2"
        type="text"
        placeholder="ex: arroz"
        required
        autocomplete="off"
      />
    </div>
    <div class="wt-h mg-b product">
      <input
        class="form-control wt-h"
        id="amo"
        name="amo3"
        type="text"
        placeholder="ex: banana"
        autocomplete="off"
      />
    </div>
    <div class="wt-h mg-b product">
      <input
        class="form-control wt-h"
        id="amo"
        name="amo4"
        type="text"
        placeholder="ex: feijão"
        autocomplete="off"
      />
    </div>
    <div class="wt-h mg-b product">
      <input
        class="form-control wt-h"
        id="amo"
        name="amo5"
        type="text"
        placeholder="ex: salada"
        autocomplete="off"
      />
    </div>

    <hr
      style="height: 0.25rem; background-color: #000; margin: 1rem 0 1rem 0"
    />

    <div class="mg-b">
      <div class="wt-h product">
        <label class="form-label" for="category">Refeição:</label>
        <select class="form-select" name="refeicao2" id="category" required>
          <option value="janta">Jantar</option>
          <option value="amoço">Amoço</option>
        </select>
      </div>
    </div>
    <div class="wt-h mg-b product">
      <label class="form-label" for="title"
        ><span>Nome da Refeição:</span></label
      >
      <input
        class="form-control wt-h"
        id="title"
        name="nomeDaRefeiJan"
        type="text"
        required
        autocomplete="off"
      />
    </div>
</div>
<h2 class="mg-t">Guarnição:</h2>
<div class="wt-h mg-b product">
  <input
    class="form-control wt-h"
    id="amo"
    name="jan1"
    type="text"
    placeholder="ex: arroz"
    required
    autocomplete="off"
  />
</div>
<div class="wt-h mg-b product">
  <input
    class="form-control wt-h"
    id="amo"
    name="jan2"
    type="text"
