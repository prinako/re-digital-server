    autocomplete="off"
  />
</div>
<div class="wt-h mg-b product">
  <input
    class="form-control wt-h"
    id="amo"
    name="jan3"
    type="text"
    placeholder="ex: banana"
    autocomplete="off"
  />
</div>
<div class="wt-h mg-b product">
  <input
    class="form-control wt-h"
    id="amo"
    name="jan4"
    type="text"
    placeholder="ex: feijão"
    autocomplete="off"
  />
</div>
<div class="wt-h mg-b product">
  <input
    class="form-control wt-h"
    id="amo"
    name="jan5"
    type="text"
    placeholder="ex: salada"
    autocomplete="off"
  />
</div>
    <div class="wt-h mg-b product">
      <button class="btn wt-h" type="submit">Enviar</button>
    </div>
  </form>
</section>

