<link rel="stylesheet" href="css/register.css" />

<!-- navigation bar -->
<section id="title">
  <nav class="navbar color-navbar">
    <!-- site name -->
    <a class="nav-brand" href="/">RU DIGITAL</a>
  </nav>
</section>
<% try { %>

<% if (inform !== '') { %>
<div class="infor"><p><%= inform %></p> </div>
<% } %>
<% }catch (e) {} %>

<!-- Form start-->
<div class="signup-home">
  <main class="signup-header color-navbar">
    <div>Criar Conta</div>
  </main>
  <div class="signup-sec">
    <form action="signup" method="POST">
      <div class="input-sec">

        <div>Nome<small style="color:red">*</small></div>
        <input type="text" name="name" class="boxes" placeholder="Nome completo" required>

        <div>Nome de usuário</div>
        <input type="text" name="username" class="boxes" placeholder="Nome de usuário" autocomplete="username">

        <div>Email<small style="color:red">*</small></div>
        <input type="email" name="email" class="boxes" placeholder="eg@service.com" required autocomplete="email">


        <div>Código de administrador</div>
        <input type="text" name="codigo" class="boxes" placeholder="Código de administrador" >

        <div>Senha<small style="color:red">*</small></div>
        <input id="password" type="password" name="password" class="boxes" placeholder="Digitar senha"
          minlength="6" required autocomplete="new-password">

        <div>Confirmar senha<small style="color:red">*</small></div>
        <input id="passwordconfirm" type="password" class="boxes" placeholder="Confirmar senha" required
          autocomplete="new-password">
      </div>

      
      <div class="signup-button">
        <button type="submit">Cadastrar-se</button>
      </div>
    </form>

   
    <div class="login ">
      <p>Já tem uma conta? <a href="/">Login</a></p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>